@model List<Movie>
@{
    ViewBag.Title = "Favorites";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<h2>Favorites</h2>

<div class="bg-light py-5">

    <div class="container">
        <h1>My Favorite Movies</h1>
        <ul class=" list-unstyled">
            @foreach (var item in Model)
            {

                <li class="mb-1 clearfix">
                    <img src="@item.Poster" alt="@item.Title" height="70" class="float-left mr-2" /> <br />
                    <strong> @item.Title (@item.Year)</strong>
                    <small>@item.Actors</small>
                </li>
            }
        </ul>
    </div>
</div>


